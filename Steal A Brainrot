spawn(function()
    wait(2)
    updateStatus(isMobile and "üì± Mobile GUI ready!" or "üß† Brainrot GUI loaded!", Color3.fromRGB(255, 100, 255))
    wait(3)
    updateStatus("üöÄ Ready to dominate!", Color3.fromRGB(100, 255, 100))
end)

